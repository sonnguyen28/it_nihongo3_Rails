<div id="add-kanji-background"></div>
<section id="add-kanji1">
  <div class= "add-kanji-content">
<p id="notice"><%= notice %></p>

<p>
  <strong class="form-label">漢字:</strong>
  <%= @kanji.kanji %>
</p>

<p>
  <strong class="form-label">訓 :</strong>
  <%= @kanji.kun %>
</p>

<p>
  <strong class="form-label">音 :</strong>
  <%= @kanji.on %>
</p>

<p class="img">
  <% if @kanji.image.attached? %>
    <%= image_tag @kanji.image %>
  <% end %>
</p>

<p>
  <strong class="form-label">意味:</strong>
  <%= @kanji.description %>
</p>

<h2>Comment List</h2>
<ul>
    <% @kanji.kanji_comment.each do |kanji_comment| %>
    <li>
        <%= kanji_comment.comment %>
        (<i><%= kanji_comment.user.name if kanji_comment.user %></i>)
    </li>
<% end %>
</ul>

<h2>Comment Form</h2>
 <%= form_with(model: @kanji_comment, local: true) do |form| %>
   <div class= "field">
     <%= form.text_area :comment %>
     <%= form.hidden_field :kanji_id, :value => @kanji.id %>
   </div>
   <div class="actions">
     <%= form.submit %>
   </div>
 <% end %>
 
  
 
<%= link_to 'Edit', edit_kanji_path(@kanji) %> |
<%= link_to 'Back', kanjis_path %>
  </div>
</section>