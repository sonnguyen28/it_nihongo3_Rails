<div id="add-kanji-background"></div>
<section id="add-kanji">
  <div class= "add-kanji-content">
<p id="notice"><%= notice %></p>

<h1>漢字リスト</h1>

<%= form_tag(kanjis_path, method: :get) do %>
  <%= text_field_tag :term, params[:term] %>
  <%= submit_tag '検索' %>
<% end %>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @kanjis.each do |kanji| %>
      <tr>
        <td><%= link_to kanji.kanji, kanji, :style => "text-decoration: none; font-size: 20px" %></td>
        <td><%= link_to '編集', edit_kanji_path(kanji), :style => "text-decoration: none; color: green" %></td>
        <td><%= link_to '削除', kanji, method: :delete, data: { confirm: 'Are you sure?' }, :style => "text-decoration: none; color: red" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '戻る', kanjis_path %>
<br>
<%= link_to '漢字を追加する', new_kanji_path %>
  </div>
</section>