<html>
<body>
<div id ="log-in-background"></div>
<div id="log-in">
  <div id ="log-in-content">
    <h1>ログイン</h1>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-outline mb-4">
        <%= f.label :メール,class:"form_label" %><br />
        <%= f.email_field:email, autofocus: true, autocomplete: "email",class:"form-control" %>
      </div>

      <div class="form-outline mb-4">
        <%= f.label :パスワード ,class:"form_label"%><br />
        <%= f.password_field :password, autocomplete: "current-password",class:"form-control" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box:remember_me %>
          <%= f.label :覚える？,class:"form-check-label" %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in",class:"btn btn-primary btn-block mb-4" %>
      </div>
      <p id="change-sign-up">すでにアカウントをお持ちですか？
        <%= render "devise/shared/links" %>  </p>
    <% end %>
  </div>
</div>


</body>
</html>