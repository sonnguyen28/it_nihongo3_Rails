<p id="notice"><%= notice %></p>

<h1>Kanji Reviews</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Kanji</th>
      <th>Review</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @kanji_reviews.each do |kanji_review| %>
      <tr>
        <td><%= kanji_review.user_id %></td>
        <td><%= kanji_review.kanji_id %></td>
        <td><%= kanji_review.review %></td>
        <td><%= link_to 'Show', kanji_review %></td>
        <td><%= link_to 'Edit', edit_kanji_review_path(kanji_review) %></td>
        <td><%= link_to 'Destroy', kanji_review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Kanji Review', new_kanji_review_path %>